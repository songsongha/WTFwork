<script>
    console.log("program reading the script");
    const link10 = document.getElementById("link10");
    const jobList = document.querySelector("ul");
    const refresh = document.getElementById("refresh");
 
    function toggleListSize(e) {

        if (jobList.className === "list_ten") {
            deleteJobEntries(2);
            refresh.innerHTML = "Give me another fucking idea";
            link10.innerHTML = "Show me a bigger fucking list";
        }
        else {
            var query = <%= @query.limit(9).order("RANDOM()").to_json %>;
            addJobEntries(query);
            refresh.innerHTML = "Give me some new fucking ideas";
            link10.innerHTML = "That's too many fucking options";
        }
        jobList.classList.toggle("list_ten");
    }    

   function addJobEntries(query) {
        Object.entries(query).forEach(array => {
            var li = document.createElement('li')
            var a = document.createElement('a'); 
            let jobTitle = document.createTextNode(array[1].job_title); 
            a.appendChild(jobTitle);  
            a.target = "_blank";  
            a.href = array[1].url; 
            li.appendChild(a)
            jobList.appendChild(li);   
        });
                  
    }

function deleteJobEntries(num) {
    while (jobList.childNodes.length > num) {
        jobList.removeChild(jobList.lastChild);
    }	
}

function refreshList(){
    deleteJobEntries(1);
    if (jobList.className === "list_ten") {
        var query = <%= @query.limit(10).order("RANDOM()").to_json %>; 
    }
    else {
        var query = <%= @query.limit(1).order("RANDOM()").to_json %>;
    }
    addJobEntries(query);
}

link10.addEventListener("click", toggleListSize);
refresh.addEventListener("click", refreshList);

</script>